[flake8]
# Конфигурация flake8 для линтинга кода

max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .idea

# Игнорируемые ошибки:
# E203 - whitespace before ':'
# W503 - line break before binary operator
# E501 - line too long (handled by black)
ignore =
    E203,
    W503,
    E501

# Максимальная сложность функций
max-complexity = 10

# Показывать статистику
count = True
statistics = True